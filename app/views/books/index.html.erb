<h1>Books</h1>

 <% @books.each do |book| %>
 <%= book.title %>
 <%= book.body %>
 <%= link_to 'Show', book_path(book.id) %>
 <%= link_to 'Edit', edit_book_path(book.id) %>
 <%= link_to 'Destroy', book_path(book.id), method: :delete %>
<% end %>

<h1>New Book</h1>

<%= form_with model: @book, url:'/books', local:true do |f| %>
 <h4>Titel</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>